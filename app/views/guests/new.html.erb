<h1>ログイン</h1>

<%= form_for @guest,:url => {:action => :create} do |f| %>
  <%= f.label "名前" %>
  <%= f.text_field :name, class: 'form-control' %>
  
  <%= f.label "email" %>
  <p><%= f.text_field :email, class: 'form-control' %>
  
  <%= f.label "comment" %>
  <%= f.text_field :comment, class: 'form-control' %>
  
  <%= f.submit "決定", class: "btn btn-primary" %>
<% end %>

