<h1>出席ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_for @attendance do |f| %> <!--:url => {:action => :create}-->
    
      <%= f.label "コメント" %>
      <%= f.text_area :comment, class: 'form-control' %>
      
      <% @event_schedules.each do |es| %>
        <p><%= f.label es.targer_at %></p>
        <p><%= f.select :entry, Attendance.entry.options %></p>
      <% end %>
      
      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>